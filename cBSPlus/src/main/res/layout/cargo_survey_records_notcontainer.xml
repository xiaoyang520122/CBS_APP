                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/corners_hui_hui_line5"
                android:gravity="left|center"
                android:hint="请输入查勘内容(建议10000字符内)"
                android:textColor="@android:color/black"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/text_defaul" />

        </LinearLayout>
        <TextView
