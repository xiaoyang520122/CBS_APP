<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableTop="@drawable/security_center_bule300"
        android:gravity="center_horizontal|top"
        android:text="安全中心"
        android:textSize="@dimen/text_h" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|top"
        android:text="定期的修改登录密码能增加账户安全性"
        android:textColor="@color/hui_text_xh"
        android:textSize="@dimen/text_defaul" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@color/bule_text_h"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/securitycenter_cpass"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/chang_pass_white64"
                android:text="修改登录密码"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_h" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/securitycenter_cphone"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/chang_phone_white64"
                android:text="修改手机号码"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_h" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>