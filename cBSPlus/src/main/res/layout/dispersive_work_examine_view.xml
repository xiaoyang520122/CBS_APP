<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/edit_blue_40"
        android:drawablePadding="0dp"
        android:gravity="left"
        android:padding="2dp"
        android:text="经过和后续"
        android:textColor="@color/hui_text_xh"
        android:textSize="@dimen/order_list_defaul" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_hui_line5"
        android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        android:drawableRight="@drawable/msg_blue_yellow2_48"
        android:drawablePadding="10dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:hint="事故经过概述"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/hui_text_xxxxh"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dispersive_work_examine_jg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_hui_line5"
        android:hint="请输入事故经过概述！"
        android:textSize="@dimen/text_h"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="25dp"
        android:padding="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:hint="后续处理意见"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginBottom="2dp"
        android:layout_marginHorizontal="25dp"
        android:textColor="@color/hui_text_xxxxh"
        android:drawableRight="@drawable/reson_blue_yellow2_48"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:textSize="@dimen/activity_vertical_margin" />

    <EditText
        android:id="@+id/dispersive_work_examine_yj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_hui_line5"
        android:hint="请输入后续处理意见！"
        android:textSize="@dimen/text_h"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="25dp"
        android:padding="10dp"
        />


    </LinearLayout></LinearLayout>
</ScrollView>