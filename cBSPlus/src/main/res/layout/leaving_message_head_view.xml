<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/LeavingMsg_headView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"  >

        <TextView
            android:id="@+id/LeavingMsg_wtren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/wtren_head_hui64"
            android:drawablePadding="5dp"
            android:text="委托人名称（无）"
            android:layout_marginTop="20dp"
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/LeavingMsg_busstype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:text="归属机构（无）"
                android:textColor="@color/hui_text_xxxh"
                android:textSize="@dimen/text_defaul" />

            <TextView
                android:id="@+id/LeavingMsg_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/location_32_hui"
                android:drawablePadding="2dp"
                android:gravity="top"
                android:text="地址信息(无)"
                android:textColor="@color/hui_text_xxxh"
                android:textSize="@dimen/text_defaul" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|left"
            android:text="新增留言(120字以内)"
            android:textColor="@color/hui_text_xxxh"
            android:textSize="@dimen/text_defaul" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/hui_text_m" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_white_huiline_4_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <EditText
                android:id="@+id/LeavingMsg_edit"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="未录入留言信息！"
                android:padding="10dp"
                android:textSize="@dimen/text_defaul" />
        </LinearLayout>

        <Button
            android:id="@+id/LeavingMsg_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/corners_hui_4_10dp"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/leaving_message_hui36"
            android:gravity="center_vertical|left"
            android:drawablePadding="5dp"
            android:text="留言列表"
            android:textColor="@color/hui_text_xxxh"
            android:textSize="@dimen/text_defaul" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui_text_m" />
    </LinearLayout>

</LinearLayout>
