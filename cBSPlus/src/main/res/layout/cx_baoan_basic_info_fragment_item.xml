<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_hui_line5"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CxBaBasicFgmt_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="▍标题**"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/CxBaBasicFgmt_fTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_15" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/CxBaBasicFgmt_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/CxBaBasicFgmt_TexView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/order_list_defaul"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>
