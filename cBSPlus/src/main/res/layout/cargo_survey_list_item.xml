<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CARGOList_createDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:drawableLeft="@drawable/check_date_hui32"
            android:drawablePadding="5dp"
            android:gravity="left"
            android:padding="2dp"
            android:text="调度时间"
            android:textColor="@color/hui_text_xh"
            android:textSize="@dimen/order_list_defaul" />

        <TextView
            android:id="@+id/CargoDSPList_UseTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/yuyue_time_yellow32"
            android:drawablePadding="5dp"
            android:gravity="left"
            android:padding="2dp"
            android:text="用时："
            android:textColor="@color/hui_text_xh"
            android:textSize="@dimen/order_list_defaul"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_white2_4_10dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical|left"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text="编号："
                        android:textColor="@color/hui_text_xh"
                        android:textSize="@dimen/order_list_defaul" />

                    <com.cninsure.cp.view.MarqueeTextView
                        android:id="@+id/HYXList_caseNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:drawableRight="@drawable/copy_hui_36"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="3dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text="无案件编号信息"
                        android:textColor="@color/bule_text_h"
                        android:textSize="@dimen/text_l"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/FSXDSPList_bussType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="1dp"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:text="费用:"
                        android:textColor="@color/hui_text_h"
                        android:textSize="@dimen/text_l" />

                    <TextView
                        android:id="@+id/HYXList_surveyorFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="1dp"
                        android:text="0.0"
                        android:textColor="@color/yellow_logo"
                        android:textSize="@dimen/text_defaul"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/hui_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HYXList_wtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="委托人："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_wtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:hint="无委托人信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/order_list_defaul" />

            <TextView
                android:id="@+id/HYXList_copy_wtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/copy_hui_36"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_l" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="归属机构："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_workOrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="marquee"
                android:hint="业务归属机构！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_l" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HYXList_ggsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:ellipsize="marquee"
                android:gravity="center_vertical|left"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="泛华中台："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:drawableRight="@drawable/callphone_blue_40"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:text="联系方式"
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_l" />

            <TextView
                android:id="@+id/HYXList_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="right"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="任务状态"
                android:textColor="@color/bulue_main"
                android:textSize="@dimen/text_sl"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="预约时间："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_book_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:hint="无信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_m" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="查勘地点："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_taskAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/copy_hui_36"
                android:ellipsize="marquee"
                android:hint="无信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_m" />

            <TextView
                android:id="@+id/HYXList_copy_taskAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/route_blue_40"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_l" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="被保险人："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <TextView
                android:id="@+id/HYXList_insured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:hint="无信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="出险时间："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <TextView
                android:id="@+id/HYXList_chuxian_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:hint="无信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="出险标的："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_biaodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:hint="无信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/order_list_defaul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text=" | "
                android:textSize="@dimen/order_list_defaul"
                android:textColor="@color/hui_text_h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="出险原因："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_chuxian_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:hint="无出险原因！"
                android:drawableRight="@drawable/msg_hui_36"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/order_list_defaul" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="派工事项："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_paigong_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/msg_hui_36"
                android:ellipsize="marquee"
                android:hint="无信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/order_list_defaul" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="派工事项补充："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/HYXList_replenish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/msg_hui_36"
                android:ellipsize="marquee"
                android:hint="无信息！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xxxxh"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/order_list_defaul" />

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/HYXList_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="拒绝派工订单"
                android:textColor="@color/yellow_logo"
                android:textSize="@dimen/order_list_defaul" />
            <!-- android:background="@drawable/corners_hui_line5" -->

            <TextView
                android:id="@+id/HYXList_button_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text=" | "
                android:textColor="@color/hui_text_xh" />

            <TextView
                android:id="@+id/HYXList_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="接受派工订单"
                android:textColor="@color/bulue_main"
                android:textSize="@dimen/order_list_defaul" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>