<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/wtspinner_simple_item_wtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:drawableRight="@drawable/choice_hui32"
        android:ellipsize="marquee"
        android:gravity="left"
        android:text="啊啊发发"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textSize="@dimen/text_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="联系人："
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_l" />

        <TextView
            android:id="@+id/wtspinner_simple_item_deputeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:hint="无"
            android:layout_weight="1"
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_l" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="联系电话："
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_l" />

        <TextView
            android:id="@+id/wtspinner_simple_item_deputePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:hint="无"
            android:layout_weight="1"
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_l" />
    </LinearLayout>

</LinearLayout>