<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_bg"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bulue_main"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp" >

        <TextView
            android:id="@+id/mybackcard_cancleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/back_white_48"
            android:gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textSize="@dimen/text_defaul" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="我的银行卡"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xh" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="center_vertical|right"
            android:textColor="@color/white"
            android:textSize="@dimen/text_defaul" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/bulue_main"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/backcard_bg" />

            <ImageView
                android:id="@+id/mybackcard_Cardlogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/default_backcard" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mybackcard_Cardname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="未添加银行卡"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/mybackcard_CardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="**** **** **** ****"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xh" />

        <TextView
            android:id="@+id/mybackcard_addCardOrChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corners_white_line_5dp"
            android:padding="5dp"
            android:text="+添加"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xh" />
    </LinearLayout>

    <TextView
        android:id="@+id/mybackcard_addCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/hui_line"
        android:gravity="center"
        android:padding="20dp"
        android:text="+添加银行卡"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/bulue_main"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/corners_hui_line5"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·持卡人姓名"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_xh" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/mybackcard_CardUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="无"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/hui_text_xxh"
                android:textSize="@dimen/text_xh" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·支行名称"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_xh" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/mybackcard_CardPartName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="无"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/hui_text_xxh"
                android:textSize="@dimen/text_xh" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="一个账号只能添加一张银行卡"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/hui_text_xh"
        android:textSize="@dimen/text_l" />

</LinearLayout>