<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/YJXDSPList_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/check_date_hui32"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="调度时间"
        android:textColor="@color/hui_text_xh"
        android:textSize="@dimen/order_list_defaul" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_white2_4_10dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/YJXDSPListI_status"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/corners_bule_4_30dp"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="10dp"
                android:ellipsize="marquee"
                android:text="任务状态"
                android:textColor="@color/white"
                android:textSize="@dimen/text_l"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.cninsure.cp.view.MarqueeTextView
                        android:id="@+id/YJXDSPListI_ggsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="李文平"
                        android:textColor="@color/hui_text_xxxxh"
                        android:textSize="@dimen/activity_vertical_margin" />

                    <com.cninsure.cp.view.MarqueeTextView
                        android:id="@+id/YJXDSPListI_workOrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="3dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text="作业归属机构！"
                        android:textColor="@color/hui_hint"
                        android:textSize="@dimen/text_l" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.cninsure.cp.view.MarqueeTextView
                        android:id="@+id/YJXDSPListI_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:hint="产品细类"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:textColor="@color/hui_text_xh"
                        android:textSize="@dimen/text_m" />

                    <com.cninsure.cp.view.MarqueeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint=" | "
                        android:textColor="@color/hui_text_xh"
                        android:textSize="@dimen/text_m" />

                    <com.cninsure.cp.view.MarqueeTextView
                        android:id="@+id/YJXDSPListI_BussType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/corners_read_4_10dp"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:hint="业务品种"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_m" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/YJXDSPList_bussType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="时效"
                    android:textColor="@color/hui_text_h"
                    android:textSize="@dimen/text_l" />

                <TextView
                    android:id="@+id/YJXDSPListI_aging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/corners_yellows_line5"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="00"
                    android:textStyle="bold"
                    android:textColor="@color/yellow_logo"
                    android:textSize="@dimen/text_l" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/local_blue48_2"
                android:gravity="center_vertical|left"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="任务地点："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/YJXDSPListI_taskAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:hint="无任务地址！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_m" />

            <TextView
                android:id="@+id/YJXDSPListI_copy_taskAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/corners_hui_line5"
                android:drawableLeft="@drawable/copy_somshing_yellow35"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="@string/copytext"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_l" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/yuyue_time_yellow32"
                android:gravity="center_vertical|left"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="作业预约时间："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/YJXDSPListI_workTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:hint="无预约作业时间！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="编号："
                android:textColor="@color/hui_text_h"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/YJXDSPListI_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:hint="无任务编号！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_h"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/text_sl" />

            <TextView
                android:id="@+id/YJXDSPListI_copy_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/corners_hui_line5"
                android:drawableLeft="@drawable/copy_somshing_yellow35"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_l" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/hui_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:id="@+id/YJXDSPListI_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="取消"
                android:textColor="@color/yellow_logo"
                android:textSize="@dimen/order_list_defaul" />
            <!-- android:background="@drawable/corners_hui_line5" -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text=" | "
                android:textColor="@color/hui_text_xh" />

            <TextView
                android:id="@+id/YJXDSPListI_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="改派"
                android:textColor="@color/bulue_main"
                android:textSize="@dimen/order_list_defaul" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>