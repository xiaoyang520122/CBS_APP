<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/YJXDSPList_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/check_date_hui32"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="创建时间"
        android:textColor="@color/hui_text_xh"
        android:textSize="@dimen/order_list_defaul" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_white2_4_10dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/YJXDSPList_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/corners_blue_line5"
                        android:paddingBottom="1dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="1dp"
                        android:text="空"
                        android:textColor="@color/bulue_main"
                        android:textSize="@dimen/text_l" />

                    <com.cninsure.cp.view.MarqueeTextView
                        android:id="@+id/YJXDSPList_insuranceBigType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical|left"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="险种类型+险种细类"
                        android:textColor="@color/hui_text_xxxxh"
                        android:textSize="@dimen/activity_vertical_margin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/YJXDSPList_bussType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/corners_read_4_10dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="1dp"
                        android:text="业务品种为空"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_l" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/YJXDSPList_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/wt_info_blue35"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:text="未知状态"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_l" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="接报案编号："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/YJXDSPList_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:hint="接报案编号为空！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_m" />

            <TextView
                android:id="@+id/YJXDSPList_copy_jiebaoan_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/corners_hui_line5"
                android:drawableLeft="@drawable/copy_somshing_yellow35"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="@string/copytext"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="委托人："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/YJXDSPList_wtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:hint="委托人为空！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|left"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="报案号："
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />

            <com.cninsure.cp.view.MarqueeTextView
                android:id="@+id/YJXDSPList_caseBaoanNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:hint="报案号为空！"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/text_m" />
            <TextView
                android:id="@+id/YJXDSPList_copy_baoan_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:background="@drawable/corners_hui_line5"
                android:drawableLeft="@drawable/copy_somshing_yellow35"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:text="@string/copytext"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/hui_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:id="@+id/YJXDSPList_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="删除接报案"
                android:textColor="@color/hui_text_xh"
                android:textSize="@dimen/order_list_defaul" />
            <!-- android:background="@drawable/corners_hui_line5" -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text=" | "
                android:textColor="@color/hui_text_xh" />

            <TextView
                android:id="@+id/YJXDSPList_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="继续编辑"
                android:textColor="@color/bulue_main"
                android:textSize="@dimen/order_list_defaul" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>