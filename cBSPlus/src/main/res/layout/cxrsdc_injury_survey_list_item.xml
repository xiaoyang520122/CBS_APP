<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/corners_hui_line5"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/text_defaul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业时间："
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_defaul" />

            <TextView
                android:id="@+id/cxrsdcqa_surveyTime"
                android:layout_width="0dp"
                android:layout_height="@dimen/work_line_defaul_hight"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@drawable/check_date_hui32"
                android:drawablePadding="5dp"
                android:gravity="right|center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_defaul" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:background="@drawable/line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/text_defaul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业地址："
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_defaul" />

            <EditText
                android:id="@+id/cxrsdcqa_surveyAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right|center"
                android:hint="请输入事故地点"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/text_defaul" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cxrsdc_qa_item_item_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp" />

        <TextView
            android:id="@+id/cxrsdcqa_surveyDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableRight="@drawable/delete_hui32"
            android:drawablePadding="2dp"
            android:text="删除作业地址"
            android:gravity="right|center"
            android:textColor="@color/yellow_logo"
            android:textSize="@dimen/text_m" />
    </LinearLayout>

</LinearLayout>