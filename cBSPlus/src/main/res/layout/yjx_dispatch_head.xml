<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bulue_main"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
            android:id="@+id/YJXDSPList_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:text="案件基本信息！"
            android:textColor="@color/yellow_m"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_h" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:background="@color/hui_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/YJXDSPList_product_wtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingBottom="1dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:text="委托人："
            android:textColor="@color/white"
            android:textSize="@dimen/activity_vertical_margin" />

        <com.cninsure.cp.view.MarqueeTextView
            android:id="@+id/YJXDSPAcHead_wtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical|left"
            android:hint="无委托人名称!"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/hui_line"
            android:textSize="@dimen/activity_vertical_margin" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="产品细类："
            android:textColor="@color/white"
            android:textSize="@dimen/order_list_defaul" />

        <com.cninsure.cp.view.MarqueeTextView
            android:id="@+id/YJXDSPAcHead_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:hint="无产品细类！"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_m" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="时效(h)："
            android:textColor="@color/yellow"
            android:textSize="@dimen/order_list_defaul" />

        <com.cninsure.cp.view.MarqueeTextView
            android:id="@+id/YJXDSPAcHead_aging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:hint=""
            android:textStyle="bold"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@color/yellow"
            android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="接报案编号："
            android:textColor="@color/white"
            android:textSize="@dimen/order_list_defaul" />

        <com.cninsure.cp.view.MarqueeTextView
            android:id="@+id/YJXDSPAcHead_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:hint="接报案编号！"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_m" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="险种信息："
            android:textColor="@color/white"
            android:textSize="@dimen/order_list_defaul" />

        <com.cninsure.cp.view.MarqueeTextView
            android:id="@+id/YJXDSPAcHead_insuranceBigTypeSmallType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:hint="无险种信息！"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableRight="@drawable/local_blue48"
            android:gravity="center_vertical|left"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="出险地址："
            android:textColor="@color/white"
            android:textSize="@dimen/order_list_defaul" />

        <com.cninsure.cp.view.MarqueeTextView
            android:id="@+id/YJXDSPAcHead_riskAddress_province_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:hint="无出现地址！"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|left"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="委托要求："
            android:textColor="@color/white"
            android:textSize="@dimen/order_list_defaul" />

        <TextView
            android:id="@+id/YJXDSPAcHead_entrustRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_white_line_5dp"
            android:hint="无委托要求！"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:textColor="@color/yellow"
            android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_l" />
    </LinearLayout>

</LinearLayout>