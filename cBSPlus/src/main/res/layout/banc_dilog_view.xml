<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/bancdialog_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/loadingwait_hui" />

    <TextView
        android:id="@+id/bancdialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="识别结果"
        android:textColor="@color/hui_text_xxh" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/hui_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/bancdialog_rep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:text="重新识别"
            android:textColor="@color/yellow_h" />

        <TextView
            android:id="@+id/bancdialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="取消"
            android:textColor="@color/hui_text_xxxxh" />

        <TextView
            android:id="@+id/bancdialog_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="确定"
            android:textColor="@color/bulue_main" />
    </LinearLayout>

</LinearLayout>