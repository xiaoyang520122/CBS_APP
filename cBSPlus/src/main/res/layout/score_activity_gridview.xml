<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/corners_white2_4_10dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:text="车险业绩情况"
            android:textColor="@color/hui_text_xh"
            android:textSize="@dimen/text_defaul" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="#e1e1e1" />

        <com.cninsure.cp.view.GridViewForScrollView
            android:id="@+id/SCOREAC_CX_gridView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2" >
        </com.cninsure.cp.view.GridViewForScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/corners_white2_4_10dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:text="非车险业绩情况"
            android:textColor="@color/hui_text_xh"
            android:textSize="@dimen/text_defaul" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="#e1e1e1" />

        <com.cninsure.cp.view.GridViewForScrollView
            android:id="@+id/SCOREAC_FC_gridView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2" >
        </com.cninsure.cp.view.GridViewForScrollView>
    </LinearLayout>
</LinearLayout>
