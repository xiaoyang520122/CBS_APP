<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            layout="@layout/action_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <RadioGroup
                android:id="@+id/CargoWM_RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/CargoWM_disInfo_RB"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_yellow_line"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/msg_blue_yellow_48"
                    android:text="基本信息"
                    android:lines="2"
                    android:textSize="@dimen/order_list_defaul"
                    android:textColor="@drawable/radio_text_color" />

                <RadioButton
                    android:id="@+id/CargoWM_1_RB"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_yellow_line"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:text="查勘记录"
                    android:lines="2"
                    android:textSize="@dimen/order_list_defaul"
                    android:drawableTop="@drawable/screen_48"
                    android:textColor="@drawable/radio_text_color" />
                <RadioButton
                    android:id="@+id/CargoWM_2_RB"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_yellow_line"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:text="询问笔录"
                    android:lines="2"
                    android:textSize="@dimen/order_list_defaul"
                    android:drawableTop="@drawable/place_blue_yellow_48"
                    android:textColor="@drawable/radio_text_color" />
                <RadioButton
                    android:id="@+id/CargoWM_3_RB"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_yellow_line"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:drawablePadding="5dp"
                    android:lines="2"
                    android:text="清点记录"
                    android:textSize="@dimen/order_list_defaul"
                    android:drawableTop="@drawable/record_48"
                    android:textColor="@drawable/radio_text_color" />


                <RadioButton
                    android:id="@+id/CargoWM_4_RB"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_yellow_line"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/camera_blue_yellow_48"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:lines="2"
                    android:padding="5dp"
                    android:text="影像资料"
                    android:textColor="@drawable/radio_text_color"
                    android:textSize="@dimen/order_list_defaul" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/CargoWM_ViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>

</RelativeLayout>