<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_bg"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/CxrsIjtr_EditTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CxrsIjtr_askIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="项目1"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/text_l"
            android:textColor="@color/yellow_logo" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@null"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/CxrsIjtr_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="编辑"
            android:gravity="right"
            android:drawableRight="@drawable/edit_blue_40"
            android:textColor="@color/bulue_main" />
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@null"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/CxrsIjtr_ask_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="移除"
            android:gravity="right"
            android:drawableRight="@drawable/delete_hui32"
            android:textColor="@color/hui_text_h" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/survey_marginTop"
            android:background="@drawable/line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/text_defaul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="询问对象："
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_defaul" />

            <EditText
                android:id="@+id/CxrsIjtr_askObject"
                android:layout_width="0dp"
                android:layout_height="@dimen/work_line_defaul_hight"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right|center"
                android:hint="请输入询问对象"
                android:textColor="@android:color/black"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/text_defaul" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/survey_marginTop"
            android:background="@null"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/text_defaul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对象电话："
                android:textColor="@color/hui_text_xxxxh"
                android:textSize="@dimen/text_defaul" />

            <EditText
                android:id="@+id/CxrsIjtr_askObjectTel"
                android:layout_width="0dp"
                android:layout_height="@dimen/work_line_defaul_hight"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:gravity="right|center"
                android:hint="请输入对象电话"
                android:textColor="@android:color/black"
                android:textColorHint="@color/hui_text_h"
                android:textSize="@dimen/text_defaul" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
