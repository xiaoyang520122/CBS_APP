<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:hint="请确认任务是否拒绝/取消！"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/c"
        android:drawablePadding="10dp"
        android:textSize="@dimen/text_h"
        android:textColor="@color/hui_text_xxxxh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
    <EditText
        android:id="@+id/Back_Order_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_hui_line5"
        android:hint="情况说明！"
        android:textSize="@dimen/text_h"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="25dp"
        android:padding="10dp"
        />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
