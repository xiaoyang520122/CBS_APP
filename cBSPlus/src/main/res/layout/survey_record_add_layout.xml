<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查勘时间："
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_defaul" />

        <TextView
            android:id="@+id/SRADDLO_ckdate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:drawableRight="@drawable/check_date_hui32"
            android:textSize="@dimen/text_defaul" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与人员："
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_defaul" />

        <EditText
            android:id="@+id/SRADDLO_cyry"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/text_defaul" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数："
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_defaul" />

        <EditText
            android:id="@+id/SRADDLO_renshu"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
        android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_defaul" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@color/hui_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天数："
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_defaul" />

        <EditText
            android:id="@+id/SRADDLO_tianshu"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
        android:textColorHint="@color/hui_line"
            android:textSize="@dimen/text_defaul" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工时总额："
            android:textColor="@color/hui_text_xxxxh"
            android:textSize="@dimen/text_defaul" />

        <TextView
            android:id="@+id/SRADDLO_gsze"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="0"
        android:textColorHint="@color/hui_line"
            android:inputType="number"
            android:textSize="@dimen/text_defaul" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hui_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|left"
        android:text="●查勘记录"
        android:textColor="@color/bulue_main"
        android:textSize="@dimen/text_h" />

    <EditText
        android:id="@+id/SRADDLO_ckjl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_hui_line5"
        android:hint="录入查勘记录"
        android:padding="10dp"
        android:textColorHint="@color/hui_line"
        android:textSize="@dimen/text_defaul" />

</LinearLayout>